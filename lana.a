		SJMP GZ_2_AM
		ATE_IREKIA_2:
		MOV GERTAERA,01H
		GZ_2_AM:
		RET
				
	EGOERA_3:
		ACALL GERTAERA_SORGAILUA_3
		MOV A, GERTAERA
		RL A
		MOV DPTR, #EKINTZA_TAULA_3
		JMP @A+DPTR
		
		EKINTZA_TAULA_3:
